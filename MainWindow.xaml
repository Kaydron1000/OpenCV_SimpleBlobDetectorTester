                                           x:Name="Slider_Area"
                                           Orientation="Horizontal" 
                                           Height="20"
                                           Margin="5"
                                           Maximum="1" 
                                           Minimum="0" 
                                           Start="{Binding Path=BlobParams.MinArea, Mode=TwoWay}"
